<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cs.dartmouth.edu.cs165.vm.stressmeter.StressGridFragment">

    <TextView
        android:id="@+id/txtStressTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:gravity="center"
        android:text="@string/stress_grid_title"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:textColor="@android:color/darker_gray"
        android:textStyle="bold" />

    <GridView
        android:id="@+id/gvStressImages"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtStressTitle"
        android:numColumns="4"
        android:text="@string/hello_blank_fragment" />

    <Button
        android:id="@+id/btnMoreImages"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gvStressImages"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="10dp"
        android:padding="20dp"
        android:text="@string/more_images"
        android:textAllCaps="true" />

</RelativeLayout>
