<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:showIn="@layout/content_profile_settings">

    <TextView
        style="@style/Profile"
        android:text="@string/name_label" />

    <EditText
        android:id="@+id/edtName"
        style="@style/ProfileEditText"
        android:hint="@string/name_hint"
        android:inputType="textPersonName" />

    <TextView
        style="@style/Profile"
        android:text="@string/email_label" />

    <EditText
        android:id="@+id/edtEmail"
        style="@style/ProfileEditText"
        android:hint="@string/email_hint"
        android:inputType="textEmailAddress" />

    <TextView
        style="@style/Profile"
        android:text="@string/phone_label" />

    <EditText
        android:id="@+id/edtPhone"
        style="@style/ProfileEditText"
        android:hint="@string/phone_hint"
        android:inputType="phone" />

    <RadioGroup
        android:id="@+id/rgGender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <RadioButton
            android:id="@+id/rbMale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/male" />

        <RadioButton
            android:id="@+id/rbFemale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/female" />
    </RadioGroup>

    <TextView
        style="@style/Profile"
        android:text="@string/class_label" />

    <EditText
        android:id="@+id/edtClass"
        style="@style/ProfileEditText"
        android:hint="@string/class_hint"
        android:inputType="number" />

    <TextView
        style="@style/Profile"
        android:text="@string/major_label" />

    <EditText
        android:id="@+id/edtMajor"
        style="@style/ProfileEditText"
        android:hint="@string/major_hint"
        android:inputType="textPersonName" />
</LinearLayout>